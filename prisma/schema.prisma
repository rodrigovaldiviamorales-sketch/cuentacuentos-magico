generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  userId    String   @unique // AquÃ­ guardaremos el ID de Clerk
  email     String   
  credits   Int      @default(3) // ğŸ 3 CrÃ©ditos de regalo al registrarse
  createdAt DateTime @default(now())
}